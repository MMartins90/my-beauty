<div class="container">
  <div class="row">
    <div class="cards">
        <% @beauticians.each do |beautician| %>
          
          <div class="col-lg-4 col-md-6 col-sm-12 p-3">
            <div class="card h-100">
              <img class="card-img-top img-fluid" src="//via.placeholder.com/350x150" alt="img">
              <div class="card-body">
                <h4 class="card-title"><%= beautician.name %></h4>
                <p class="card-text"><%= beautician.description %></p>
                
              </div>
              <div class="card-footer text-center bg-white">
                <a class="btn btn-outline-secondary" href="#">View all</a>
              </div>
            </div>
          </div>
          
        <% end %>
      </div>
  </div>
</div>