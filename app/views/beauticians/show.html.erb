<div class="container">
  <div class="banner">
    <%= cl_image_tag @beautician.banner_photo.key, height: 300, width: 800, crop: :fill %>
  </div>

  <div>
    <h1><%= @beautician.name %></h1>
    <h1><%= @beautician.location %></h1>
    <p><h4><%= @beautician.description %></h4><p>
  </div>

      <div class="treatments">
      <h4>Treatments</h4>
        <% @beautician.treatments.each do |treatment| %>
          <ul>
            <li> <b><%= treatment.name %></b>: <%= treatment.description %> - Â£<%= treatment.cost %> - <%= link_to "Book Now",  new_treatment_booking_path(treatment), class: "btn btn-my-beauty"%></li>
          </ul>
        <% end %>
      </div>
  
  <div>
    <h2>View our work!</h2>
      <% @beautician.portfolio_photos.each do |photo| %>
      <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
      <% end %>
    </div>
</div>
