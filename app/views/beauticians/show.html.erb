<div class="container">
  <div class="text-center">
    <%= cl_image_tag @beautician.banner_photo.key, height: 300, width: 900, crop: :fill %>
  </div>

  <div class="text-center">
    <h1 class="pt-4"><%= @beautician.name %></h1>
    <h3><%= @beautician.location %></h3>
    <p><%= @beautician.description %><p>
  </div>
<br>
  <div class="cards">
    <% @beautician.treatments.each do |treatment| %>
    <div class="col-lg-4 col-md-6 col-sm-12 p-3">
      <div class="card treatment-service-card">
        <div class="card-body">
          <h4 class="card-title"><%= treatment.name %></h4>
          <p class="card-text"><%= treatment.description %></p>
        </div>
        <div class="card-footer text-center bg-white">
          <p class="card-text price-bold">Â£<%= treatment.cost %></p>
          <%= link_to "Book Now",  new_treatment_booking_path(treatment), class: "btn btn-my-beauty"%>
        </div>
      </div>
    </div>
  <% end %>
</div>

<br>
<h2 class="text-center">See Our Work</h2>
  <div class="portfolio_card">
      <% @beautician.portfolio_photos.each do |photo| %>
      <div class="image_card"><%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %></div>
      <% end %>
  </div>
<br>

<div id="map"
     style="width: 100%; height: 500px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

<br>
  <div>
    <h2 class="text-center">Reviews</h2>
  </div>
  <% @beautician.reviews.each do |review| %>
  <ul>
      <li class="treatment_card">
        <div class="d-flex justify-content-between">
          <div class="treatment_name">
              <b><%= review.title %></b>
          </div>
          <div class="rating">
            <% if review.rating == 1 %>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star"></span>
              <span class="fa fa-star"></span>
              <span class="fa fa-star"></span>
              <span class="fa fa-star"></span>
            <% elsif review.rating == 2 %>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star"></span>
              <span class="fa fa-star"></span>
              <span class="fa fa-star"></span>
            <% elsif review.rating == 3 %>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star"></span>
              <span class="fa fa-star"></span>
            <% elsif review.rating == 4 %>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star"></span>
            <% else %>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star checked"></span>
            <% end %>
          </div>
          </div>
        <br>
        <%= review.content %></li>
  </ul>
  <% end %>

</div>







