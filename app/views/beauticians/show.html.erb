<div class="container">
  <div class="text-center">
    <%= cl_image_tag @beautician.banner_photo.key, height: 300, width: 900, crop: :fill %>
  </div>

  <div class="text-center">
    <h1><%= @beautician.name %></h1>
    <h3><%= @beautician.location %></h3>
    <p><%= @beautician.description %><p>
  </div>
<br>
      <div class="text-center">
      <h4>Treatments</h4>
        <% @beautician.treatments.each do |treatment| %>
          <ul>
            <li class="treatment_card">
              <div class="d-flex justify-content-between"> 
                <div class="treatment_name">
                  <b><%= treatment.name %></b>
                </div> 
                <div class="price">Â£<%= treatment.cost %> </div> 
                <div class="booking_button"> <%= link_to "Book Now",  new_treatment_booking_path(treatment), class: "btn btn-my-beauty"%> </div>
              </div> 
              <br> 
              <%= treatment.description %></li>
          </ul>
        <% end %>
      </div>
<br>
<h2 class="text-center">See Our Work</h2>
  <div class="portfolio_card">
      <% @beautician.portfolio_photos.each do |photo| %>
      <div class="image_card"><%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %></div>
      <% end %>
  </div>
<br>
  <div>
    <h2 class="text-center">Reviews</h2>
  </div>
  <% @beautician.reviews.each do |review| %>
  <ul>
      <li class="treatment_card">
        <div class="d-flex justify-content-between"> 
          <div class="treatment_name">
              <b><%= review.title %></b>
          </div> 
          <div class="price"><%= review.rating %> stars </div> 
          </div> 
        <br> 
        <%= review.content %></li>
  </ul>
  <% end %>
  
</div>
